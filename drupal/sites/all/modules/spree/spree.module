/**
 * Implementation of hook_menu().
 */
function spree_menu() {
  $items = array();

  $items['admin/settings/spree'] = array(
    'title' => 'spree',
    'page callback' => 'drupal_get_form',
    'page arguments' => array('spree_settings'),
    'access arguments' => array('administer spree'),
    'file' => 'spree.admin.inc',
  );

  return $items;
}
